# github
Host github.com
	HostName github.com
	User git
	IdentityFile ~/.ssh/keys/misc_key
	ControlPath none
	ControlMaster no

Host gh
	HostName github.com
	User git
	IdentityFile ~/.ssh/keys/misc_key
	ControlPath none
	ControlMaster no

# Other Hosts
Host dev.slidelint.net
	HostName dev.slidelint.net
	User slidelint_site

Host prod.slidelint.net
	HostName prod.slidelint.net
	User tim
	Port 2222

# IP addresses that change often, hence don't do checking.
Host 192.168.1.1
	StrictHostKeyChecking no
	CheckHostIP no
	UserKnownHostsFile /dev/null
	ControlPath /dev/null
	ControlMaster no

Host 172.16.1.1
	StrictHostKeyChecking no
	CheckHostIP no
	UserKnownHostsFile /dev/null
	ControlPath /dev/null
	ControlMaster no

