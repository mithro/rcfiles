# Storage accessed without the .mithis.com
Host storage
	User tim

Host storage.mithis.com
	# Foward transmission bittorrent client
	LocalForward localhost:9091 localhost:9091
	# Forward VNC for local VMs
	LocalForward localhost:5900 localhost:5900
	LocalForward localhost:5901 localhost:5901
	LocalForward localhost:5903 localhost:5902
	LocalForward localhost:5904 localhost:5904

Host vaio.mithis.com
	# Forward VNC for local VMs
	LocalForward localhost:6900 localhost:5900
	LocalForward localhost:6901 localhost:5901

Host *.mithis.com
	User tim
	IdentityFile ~/.ssh/keys/misc_key

# Thousand Parsec hosts
Host *.thousandparsec.net
	User tim
	IdentityFile ~/.ssh/keys/misc_key

# github
Host github.com
	HostName github.com
	User git
	IdentityFile ~/.ssh/keys/misc_key
	ControlPath none
	ControlMaster no

Host gh
	HostName github.com
	User git
	IdentityFile ~/.ssh/keys/misc_key
	ControlPath none
	ControlMaster no

# Other Hosts
Host labs
	HostName labs.openaustralia.org
	User tim
	Port 443
	IdentityFile ~/.ssh/keys/misc_key

# Tim's Video hosts
Host vid-collect
	Hostname vid-collect.syd

Host vid-encoder
	Hostname 49.156.19.78
	User root

# IP addresses that change often, hence don't do checking.
Host 192.168.1.1
	StrictHostKeyChecking no
	CheckHostIP no
	UserKnownHostsFile /dev/null
	ControlPath /dev/null
	ControlMaster no

Host 172.16.1.1
	StrictHostKeyChecking no
	CheckHostIP no
	UserKnownHostsFile /dev/null
	ControlPath /dev/null
	ControlMaster no

# Streamti.me configuration
Host *.streamti.me
	User root

Host portable
	Hostname 49.156.19.78
	User root
